<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/forCalcButton"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/zero"
            app:layout_constraintVertical_bias="0.048" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:gravity="center_horizontal"/>
    <Button
            android:text="@string/calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calc" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zero" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="109dp"
            android:layout_height="127dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>