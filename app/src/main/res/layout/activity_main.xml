<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/imageView"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="23dp"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            tools:layout_editor_absoluteY="16dp"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:layout_editor_absoluteX="23dp"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:layout_editor_absoluteX="23dp"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:layout_editor_absoluteX="226dp"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            tools:layout_editor_absoluteX="226dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="415dp"
            android:layout_height="737dp"
            android:id="@+id/recyclerView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>